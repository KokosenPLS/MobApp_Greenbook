<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    tools:context=".fragments.ProfilFragment">

    <ImageView
        android:id="@+id/profil_bilde"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/profil_navn"
        style="@style/Title_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/tittelrect"
        android:elevation="4dp"
        android:text="Ola Nordmann"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil_bilde" />

    <Button
        android:id="@+id/profil_btn_følgere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:elevation="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="38 følgere"
        app:layout_constraintEnd_toStartOf="@+id/profil_button_follow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil_navn" />

    <Button
        android:id="@+id/profil_button_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Følg"
        app:layout_constraintEnd_toStartOf="@+id/profil_btn_send_melding"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/profil_btn_følgere"
        app:layout_constraintTop_toBottomOf="@+id/profil_navn" />

    <Button
        android:id="@+id/profil_btn_send_melding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Melding"
        app:icon="@drawable/ic_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/profil_button_follow"
        app:layout_constraintTop_toBottomOf="@+id/profil_navn" />

    <TextView
        android:id="@+id/profil_txt_bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/myrect"
        android:elevation="4dp"
        android:gravity="start"
        android:padding="6dp"
        android:text="Biotekst kommer herBiotekst kommer herBiotekst kommer herBiotekst kommer herBiotekst kommer herBiotekst kommer herBiotekst kommer her"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil_button_follow" />

    <TextView
        android:id="@+id/profil_txt_innlegg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/myrect"
        android:elevation="4dp"
        android:gravity="start"
        android:padding="6dp"
        android:text="Her kommer innlegg til personen Her kommer innlegg til personen Her kommer innlegg til personen Her kommer innlegg til personen Her kommer innlegg til personen "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil_txt_bio" />
</androidx.constraintlayout.widget.ConstraintLayout>