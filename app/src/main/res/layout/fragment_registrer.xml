<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txt_login"
            style="@style/Title_Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Registrer"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/txt_email"
            style="@style/Margin_Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="E-post"
            android:inputType="textEmailAddress"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/registrer_bruker_passord_1"
            style="@style/Margin_Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Passord"
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/registrer_bruker_passord_2"
            style="@style/Margin_Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Skriv inn passord pÃ¥ nytt"
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txt_tittel"
            style="@style/Margin_Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fornavn"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_etternavn"
            style="@style/Margin_Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Etternavn"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/myrect"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/registrer_bruker_dp_icon"
                style="@style/Margin_Default"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrangement" />

            <TextView
                android:id="@+id/registrer_bruker_datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Margin_Default"
                android:hint="@string/hint_datepicker"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_registrer"
            style="@style/Margin_Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Reg_btn" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>