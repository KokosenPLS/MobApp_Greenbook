    android:layout_height="wrap_content"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boxGrey"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kommentar_tittel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greenbook"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/kommentar_tekst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/boxGrey"
                android:backgroundTint="@color/boxGrey"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:text="f asdfa sdfasd dasdfasd asdf asdf asdf asdf asd fasd fasdf asdf asd fasdfa sdfasdfasdf asdfas dfasdf asdf asdf asdf as df" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>