<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ArrangementFragment">


    <ImageView
        android:id="@+id/arrangement_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/arrangement_tittel"
        style="@style/Title_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/tittelrect"
        android:text="Arrangement tittel"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrangement_img" />

    <TextView
        android:id="@+id/arrangement_txt_beskrivelse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/myrect"
        android:gravity="start"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="Arrangement tekst kommer her Arrangement tekst kommer her Arrangement tekst kommer her Arrangement tekst kommer her Arrangement tekst kommer her Arrangement tekst kommer her Arrangement tekst kommer her Arrangement tekst kommer her Arrangement tekst kommer her "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrangement_btn_skriv_innlegg" />

    <Button
        android:id="@+id/arrangement_p책meldte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 P책meldte"
        app:layout_constraintEnd_toStartOf="@+id/arrangement_btn_blimed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/arrangement_btn_blimed" />

    <Button
        android:id="@+id/arrangement_btn_blimed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bli med"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/arrangement_p책meldte"
        app:layout_constraintTop_toBottomOf="@+id/arrangement_tittel" />

    <Button
        android:id="@+id/arrangement_btn_skriv_innlegg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Skriv innlegg"
        app:icon="@drawable/ic_message"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/arrangement_goToGoogleMaps"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrangement_p책meldte" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/myrect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrangement_txt_beskrivelse"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/arrangement_innlegg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Innlegg kommer her" />
    </FrameLayout>

    <ImageView
        android:id="@+id/arrangement_goToGoogleMaps"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="60dp"
        android:src="@android:drawable/ic_menu_mapmode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrangement_btn_blimed" />
</androidx.constraintlayout.widget.ConstraintLayout>